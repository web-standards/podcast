{
	"name": "podcast",
	"private": true,
	"type": "module",
	"files": [
		"src/episodes/"
	],
	"scripts": {
		"test": "npx editorconfig-checker && npx eslint",
		"build": "eleventy",
		"deploy:mp3": "cd src/mp3 && rsync --progress --archive --compress --delete --delete-excluded --exclude .DS_Store . wst@web-standards.ru:/var/www/web-standards.ru/podcast/episodes/",
		"deploy:cover": "cd src && rsync --archive --compress cover.png wst@web-standards.ru:/var/www/web-standards.ru/podcast/",
		"deploy:feed": "cd dist && rsync --archive --compress index.xml latest.xml wst@web-standards.ru:/var/www/web-standards.ru/podcast/feed/",
		"deploy": "npm run deploy:mp3 && npm run deploy:cover && npm run deploy:feed",
		"new": "node scripts/new.js",
		"file-size": "node scripts/feed/file-size.js",
		"prepare": "husky || true",
		"wav": "node scripts/wav.js",
		"mp3": "node scripts/mp3.js"
	},
	"engines": {
		"node": ">=24"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@eslint/js": "^10.0.1",
		"@eslint/markdown": "^7.5.1",
		"editorconfig-checker": "^6.1.1",
		"eslint": "^10.0.0",
		"get-mp3-duration": "^1.0.0",
		"globals": "^17.3.0",
		"html-minifier-terser": "^7.2.0",
		"husky": "^9.1.7",
		"js-yaml": "^4.1.1",
		"minify-xml": "^4.5.2",
		"node-id3": "^0.2.9"
	}
}
